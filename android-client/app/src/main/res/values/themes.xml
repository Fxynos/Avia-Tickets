<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AviaTickets" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <!-- Secondary -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/dark_green</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- System -->
        <!-- TODO [MaterialAlertDialog] crashes when statusBarColor referencing `?attr/colorOnPrimary` find out why -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <!-- Style -->
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sf_pro_display</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="android:imageButtonStyle">@style/ImageButtonStyle</item>
        <item name="imageButtonStyle">@style/ImageButtonStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="android:switchStyle">@style/SwitchStyle</item>
        <item name="switchStyle">@style/SwitchStyle</item>
    </style>
</resources>